<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 
          http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- Corporate proxy settings (if needed) -->
    <proxies>
        <proxy>
            <id>corporate-proxy</id>
            <active>true</active>
            <protocol>http</protocol>
            <host>proxy.company.com</host>
            <port>8080</port>
            <username>your-username</username>
            <password>your-password</password>
            <nonProxyHosts>localhost|127.0.0.1|*.company.com</nonProxyHosts>
        </proxy>
    </proxies>

    <!-- Corporate repository credentials -->
    <servers>
        <server>
            <id>corporate-nexus</id>
            <username>your-corporate-username</username>
            <password>your-corporate-password</password>
        </server>
        <server>
            <id>corporate-snapshots</id>
            <username>your-corporate-username</username>
            <password>your-corporate-password</password>
        </server>
    </servers>

    <!-- Mirror configuration to redirect Maven Central -->
    <mirrors>
        <!-- Redirect all requests to corporate Nexus -->
        <mirror>
            <id>corporate-nexus-mirror</id>
            <name>Corporate Nexus Repository</name>
            <url>https://nexus.company.com/repository/maven-public/</url>
            <mirrorOf>*</mirrorOf>
        </mirror>
    </mirrors>

    <!-- Corporate repository profiles -->
    <profiles>
        <profile>
            <id>corporate</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>corporate-nexus</id>
                    <name>Corporate Nexus Repository</name>
                    <url>https://nexus.company.com/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>corporate-nexus-plugins</id>
                    <name>Corporate Nexus Plugin Repository</name>
                    <url>https://nexus.company.com/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>corporate</activeProfile>
    </activeProfiles>
</settings>
